<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <TextView
        android:id="@+id/palavraTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="Palavra" />

    <ImageView
        android:id="@+id/imagemForca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/forca_0"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/chuteEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Digite uma letra"
        android:inputType="text"
        android:maxLength="1"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/chuteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chutar"/>

    <TextView
        android:id="@+id/tentativasTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="16dp"/>

</LinearLayout>
